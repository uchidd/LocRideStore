<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:backgroundTint="#243665"
    android:clickable="true"
    android:focusable="false"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_margin="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            card_view:cardCornerRadius="10dp"
            android:layout_width="135dp"
            android:layout_height="135dp">

            <ImageView
                android:id="@+id/ivList"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/a1a"/>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_margin="9dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvList1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tesOnly"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:textColor="#FAD744"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/tvList2"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hoodie"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:textColor="#8BD8BD"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tvList3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IDR 550.000"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:textColor="#EE5455"
                android:textSize="15sp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>