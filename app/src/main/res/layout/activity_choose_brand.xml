<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChooseBrandActivity"
    android:background="#8BD8BD">

    <RelativeLayout
        android:layout_margin="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBackMain"
            android:layout_alignParentLeft="true"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:src="@drawable/icon_back_navy"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Brand"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textColor="#2b3252"
            android:textSize="29sp"
            android:textAlignment="center"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:id="@+id/vFirst"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#243665" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="49dp"
                android:src="@drawable/icon_a" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:id="@+id/vSecond"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FAD744" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="49dp"
                android:src="@drawable/icon_b" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:id="@+id/vThird"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#EE5455" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="49dp"
                android:src="@drawable/icon_c" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

